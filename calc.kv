                on_press:
                    root.input()
                    tex.text+=self.text
            Button:
                text:"0"
                on_press:
                    root.input()
                    tex.text+=self.text
            Button:
                text:"+"
                on_press:
                    root.input()
                    tex.text+=self.text
            Button:
                text:"-"
                on_press:
                    root.input()
                    tex.text+=self.text
            Button:
                text:"*"
                on_press:
                    root.input()
                    tex.text+=self.text
            Button:
                text:"/"
                on_press:
                    root.input()
                    tex.text+=self.text
            Button:
                text:"="
                on_press:root.pressed()
            Button:
                text:"CE"
                on_press:
                    root.clear()